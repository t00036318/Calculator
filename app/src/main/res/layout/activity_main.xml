<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="van.calculator.MainActivity">

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num7"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/result"
        android:layout_alignParentStart="true"
        tools:text="7"
        android:onClick="numero"/>

    <TextView
        android:text="logs"
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:id="@+id/logs"
        android:layout_weight="0.81"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mul"
        android:layout_below="@+id/div"
        android:layout_alignStart="@+id/div"
        android:onClick="numero (MainActivity)"/>

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res"
        android:layout_below="@+id/mul"
        android:layout_alignStart="@+id/mul"
        android:onClick="numero (MainActivity)"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
        android:layout_below="@+id/res"
        android:layout_alignStart="@+id/res"
        tools:text="+"
        android:onClick="numero (MainActivity)"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num4"
        android:layout_below="@+id/num8"
        android:layout_alignParentStart="true"
        tools:text="4"
        android:onClick="numero"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num9"
        android:layout_alignTop="@+id/num8"
        android:layout_toEndOf="@+id/num8"
        tools:text="9"
        android:onClick="numero"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num8"
        android:layout_alignBaseline="@+id/num7"
        android:layout_alignBottom="@+id/num7"
        android:layout_toEndOf="@+id/num7"
        tools:text="8"
        android:onClick="numero"/>

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num4"
        android:layout_alignParentStart="true"
        android:id="@+id/num1"
        tools:text="1"
        android:onClick="numero"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div"
        android:layout_toEndOf="@+id/num8"
        android:id="@+id/num6"
        tools:text="6"
        android:onClick="numero"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/num1"
        android:layout_toStartOf="@+id/num6"
        android:id="@+id/num2"
        tools:text="2"
        android:onClick="numero"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num1"
        android:layout_alignParentStart="true"
        android:id="@+id/num0"
        tools:text="0"
        android:onClick="numero"/>

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/num0"
        android:layout_toEndOf="@+id/num1"
        android:id="@+id/porcentaje"
        tools:text="%" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sum"
        android:layout_toEndOf="@+id/num2"
        android:id="@+id/igual"
        tools:text="="
        android:onClick="igual (MainActivity)"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/div"
        tools:text="/"
        android:layout_alignBaseline="@+id/num9"
        android:layout_alignBottom="@+id/num9"
        android:layout_alignParentEnd="true"
        android:onClick="numero (MainActivity)"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num5"
        tools:text="5"
        android:layout_alignBaseline="@+id/num6"
        android:layout_alignBottom="@+id/num6"
        android:layout_toEndOf="@+id/num7"
        android:onClick="numero"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/result"
        android:layout_below="@+id/logs"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num3"
        tools:text="3"
        android:onClick="numero"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_toEndOf="@+id/num2" />


</RelativeLayout>
